<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<MenuBar stylesheets="/style/style.css" fx:controller="ch.supsi.dispatcher.MenuDispatcher" nodeOrientation="LEFT_TO_RIGHT" prefHeight="20.0"
         BorderPane.alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    <Menu mnemonicParsing="false" text="File">
        <items>
            <MenuItem mnemonicParsing="false" text="Open..." onAction="#open"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" text="Save" onAction="#save" disable="true"/>
            <MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false" text="Save As" onAction="#saveAs" disable="true" />
            <MenuItem mnemonicParsing="false" text="Export" onAction="#export" disable="true" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" onAction="#close"/>
        </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
        <items>
            <MenuItem mnemonicParsing="false" text="Preferences" onAction="#preferences" />
        </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
        <items>
            <MenuItem mnemonicParsing="false" text="About" onAction="#about" />
        </items>
    </Menu>
</MenuBar>
