<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<MenuBar stylesheets="/style/style.css" fx:controller="org.supsi.dispatcher.MenuDispatcher" nodeOrientation="LEFT_TO_RIGHT" prefHeight="20.0"
         BorderPane.alignment="CENTER" xmlns:fx="http://javafx.com/fxml">
    <Menu mnemonicParsing="false" text="%ui_file">
        <items>
            <MenuItem mnemonicParsing="false" text="%ui_open" onAction="#open"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" text="%ui_save" onAction="#save" disable="true"/>
            <MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false" text="%ui_save_as" onAction="#saveAs" disable="true" />
            <MenuItem mnemonicParsing="false" text="%ui_export" onAction="#export" disable="true" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="%ui_close" onAction="#close"/>
        </items>
    </Menu>
    <Menu mnemonicParsing="false" text="%ui_edit">
        <items>
            <MenuItem mnemonicParsing="false" text="%ui_preferences" onAction="#preferences" />
        </items>
    </Menu>
    <Menu mnemonicParsing="false" text="%ui_help">
        <items>
            <MenuItem mnemonicParsing="false" text="%ui_about" onAction="#about" />
        </items>
    </Menu>
</MenuBar>
